<header>
<h1 class="home"><a href="{{ '/' | url }}" title="{{ title or metadata.title }}">{{ metadata.title }}</a></h1>
<ul class="nav">
{%- for entry in collections.all | eleventyNavigation %}
<li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}" title="{{ entry.title }}">{{ entry.title }}</a></li>
{%- endfor %}
</ul>
</header>