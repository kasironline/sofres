---
layout: layouts/base.njk
templateClass: tmpl-post
---
<h1><a href="{{page.url}}" title="{{ title }}">{{ title }}</a></h1>
<h2>{{description}}</h2>
<div class="video"><iframe src=https://youtube.com/embed/{{video}} title={{description}}"></iframe></div>
{%- for tag in tags | filterTagList -%}
{%- set tagUrl %}/tags/{{ tag | slug }}/{% endset -%}
<a href="{{ tagUrl | url }}" title="{{ tag }}" class="post-tag">{{ tag }}</a>
{%- endfor %}

{{ content | safe }}

{%- set nextPost = collections.posts | getNextCollectionItem(page) %}
{%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
{%- if nextPost or previousPost %}
<hr>
<ul>
  {%- if nextPost %}<li>Next: <a href="{{ nextPost.url | url }}" title="{{ nextPost.data.title }}">{{ nextPost.data.title }}</a></li>{% endif %}
  {%- if previousPost %}<li>Previous: <a href="{{ previousPost.url | url }}" title="{{ previousPost.data.title }}">{{ previousPost.data.title }}</a></li>{% endif %}
</ul>
{%- endif %}
